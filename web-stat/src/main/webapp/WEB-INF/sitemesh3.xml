<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/common/base.jsp”所装饰 -->
    <mapping path="/*" decorator="/WEB-INF/views/common/base_tmpl.jsp" />
 
    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰  -->
    <mapping path="*Async" exclue="true" />
    
</sitemesh>